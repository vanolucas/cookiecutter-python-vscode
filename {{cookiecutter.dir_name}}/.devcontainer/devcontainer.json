{
    "name": "{{ cookiecutter.project_name }}",
    // Docker Compose dev project setup
    "dockerComposeFile": "docker-compose.yml",
    "service": "dev",
    "workspaceFolder": "/workspace",
    "shutdownAction": "stopCompose",
    // Ports to forward locally
    "forwardPorts": [
        // Uvicorn
        8000,
        8888,
        // PostgreSQL default port
        // 5432
        // Adminer: mapped local port
        51003
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                // Python development and code analysis
                "matangover.mypy",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.isort",
                "ms-python.python",
                "ms-python.vscode-pylance",
                // Jupyter notebooks
                "ms-toolsai.jupyter",
                // CSV coloring
                "mechatroner.rainbow-csv"
            ]
        }
    },
    "postCreateCommand": "pip install --upgrade pip && pip install --upgrade -r requirements.txt -r .devcontainer/requirements.txt",
    "remoteUser": "vscode"
}